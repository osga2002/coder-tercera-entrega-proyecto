<div class="container my5">
    <div class="jumbotron">
        <h1>Login</h1>
        <br>
        <form action="/login" method="post" role="form" class="form" autocomplete="off">
            <div class="form-group">
                <input type="text" name="username" id="username" class="form-control" placeholder="nombre">
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" class="form-control" placeholder="password">
            </div>
            <div class="form-group">
                <input class="btn btn-sm btn-success" type="submit" value="Ingresar">
            </div>
        </form>
        <hr>
        <div class="text-left"><button class="btn btn-sm btn-success my-3" onclick="location.href = '/register'">Ir a registro</button></div>
    </div>
</div>